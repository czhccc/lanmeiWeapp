/* pages/self/comment/comment.wxss */
page {
	height: 100vh;
	background-color: #F4F4F4;
}

.comment {
	
}

.tabs {

}

.list {
	height: calc(100vh - 88rpx);
}
.item {
	width: 690rpx;
	margin: 0 auto;
	margin-top: 30rpx;
	background-color: white;
	padding: 20rpx;
	box-sizing: border-box;
	border-radius: 16rpx;
}
.item-line {
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
	margin-bottom: 20rpx;
}
.item-line-label {
	font-weight: 700;
}

.comment-info {
	font-size: 24rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.comment-info-author {
	display: flex;
	align-items: center;
}
.comment-info-author-label {
	font-weight: 700;
}
.comment-info-time {

}
.response-wrapper {
	margin-top: 30rpx;
}
.response-item {
	margin-top: 20rpx;
}
.response-index {
	font-size: 24rpx;
	font-weight: 700;
}
.response-info {
	font-weight: 400;
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
}
.response-author {
	display: flex;
	align-items: center;
}
.response-author-label {
	font-weight: 700;
}
.response-time {
	margin-left: 10rpx;
}

.item-content-label {
	font-size: 26rpx;
	margin-bottom: 10rpx;
	font-weight: 700;
}
.item-cotent-value {
	font-size: 24rpx;
}
.item-content-textarea {
	border: 1rpx solid gray;
	border-radius: 16rpx;
	box-sizing: border-box;
	padding: 20rpx;
	font-size: 24rpx;
}

.blank {
	height: 100rpx;
}

.responseBtn-wrapper {
	display: flex;
	justify-content: flex-end;
}
.responseBtn {
	width: 200rpx;
	height: 68rpx;
	line-height: 68rpx;
	color: white;
	text-align: center;
	background-color: #1989FA;
	border-radius: 30rpx;
	margin-top: 30rpx;
}

.responsePanel-wrapper {
	padding: 40rpx;
	box-sizing: border-box;
}
.textarea::placeholder {
	font-size: 24rpx;
}
.submitBtn {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	color: white;
	text-align: center;
	background-color: #1989FA;
	border-radius: 30rpx;
	margin-top: 100rpx;
}