/* pages/self/handleComment/handleComment.wxss */
page {
	height: 100%;
	background-color: #F4F4F4;
}

.handleComment {
	padding-bottom: 60rpx;
}

.list {

}
.item {
	width: 690rpx;
	margin: 0 auto;
	margin-top: 30rpx;
	background-color: white;
	padding: 20rpx;
	box-sizing: border-box;
	border-radius: 16rpx;
}
.item-line {
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
	margin-bottom: 20rpx;
}
.item-line-label {
	color: #666666;
}
.item-line-value {
	color: #000000;
}
.item-content-label {
	font-size: 26rpx;
	margin-bottom: 10rpx;
	color: #666666;
	margin-top: 30rpx;
}
.item-cotent-value {
	font-size: 24rpx;
}
.item-content-textarea {
	border: 1rpx solid gray;
	border-radius: 16rpx;
	box-sizing: border-box;
	padding: 20rpx;
	font-size: 24rpx;
}
.textarea::placeholder {
	font-size: 24rpx;
}

.submitBtn {
	width: 100%;
	height: 68rpx;
	line-height: 68rpx;
	color: white;
	text-align: center;
	background-color: #1989FA;
	border-radius: 30rpx;
	margin-top: 30rpx;
}