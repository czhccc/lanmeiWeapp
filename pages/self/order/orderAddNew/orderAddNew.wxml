<!--pages/self/order/orderAddNew/orderAddNew.wxml-->
<view class="orderAddNew">

  <view class="item-title">订单类型</view>
  <view class="type-wrapper">
    <radio-group bindchange="typeChange" style="width: 100%;">
      <view style="display: flex;align-items: center;margin-bottom: 20rpx;justify-content: space-between;">
        <view wx:for="{{typeArr}}" wx:key="index" style="width: 50%;">
          <view style="display: flex;align-items: center;">
            <radio value="{{item.value}}" checked="true" color="#1989FA"/>
            <text style="margin-left: 10rpx;">{{item.name}}</text>
          </view>
        </view>
      </view>
    </radio-group>
  </view>

  <view class="item-title">收货信息</view>
  <view class="cell-wrapper">
    <van-field
      label="姓名"
      model:value="{{ notes }}"
      placeholder="请输入收货人姓名"
      border="{{ false }}"
    />
    <van-field
      label="手机号"
      model:value="{{ notes }}"
      placeholder="请输入收货人手机号"
      border="{{ false }}"
    />
    <picker mode="region" value="{{region}}" bindchange="bindRegionChange">
      <van-field
        label="省市区"
        model:value="{{ region }}"
        placeholder="请选择省市区"
        readonly
      />
    </picker>
    <van-field
      label="详细地址"
      model:value="{{ detailAddress }}"
      placeholder="请输入详细地址"
      type="textarea"
      autosize
      maxlength="{{50}}"
    />
  </view>

  <view class="item-title">留言说明</view>
  <view class="notes-wrapper">
    <van-field
      model:value="{{ notes }}"
      type="textarea"
      placeholder="请输入留言说明"
      autosize
      border="{{ false }}"
      class="notes-input"
      maxlength="{{200}}"
      show-word-limit
    />
  </view>

  <view class="buy">
    
  </view>

  <view class="order">
    
  </view>

</view>