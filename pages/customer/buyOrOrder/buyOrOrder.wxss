/* pages/customer/buyOrOrder/buyOrOrder.wxss */
page {
  height: 100%;
  background: #F4F4F4;
}

.buyOrOrder {
  padding-bottom: 200rpx;
}

.goods{
  width: 750rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  padding: 30rpx 24rpx;
  background-color: white;
  display: flex;
}
.goods-img {
  min-width: 180rpx;
  max-width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
}
.goods-content {
  margin-left: 20rpx;
  flex: 1;
  position: relative;
}
.goods-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 700;
}
.goods-specification {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999999;
  display: flex;
}
.goods-specification-label {
  word-break: keep-all;
}
.goods-specification-value {
  word-break: break-all;
}
.goods-price {
  display: flex;
  align-items: flex-end;
  margin-top: 48rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods-price-content {
  display: flex;
  align-items: flex-end;
}
.goods-price-new {
  font-size: 36rpx;
  color: #F62603;
  font-weight: 700;
}
.goods-price-old {
  font-size: 24rpx;
  color: gray;
  text-decoration: line-through;
  margin-left: 10rpx;
  transform: translateY(-4rpx);
}

.num-wrapper {
  min-width: 200rpx;
}
.num-wrapper2 {
  display: flex;
  justify-content: flex-end;
}

.chooseAddress {
  width: 690rpx;
  height: 76rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 0 24rpx;
  line-height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.chooseAddress-text {
  font-size: 28rpx;
  color: #999999;
}
.chooseAddress-arrow {
  width: 24rpx;
  height: 24rpx;
}
.choosedAddress {
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
}
.choosedAddress-content {
  max-width: 600rpx;
}
.choosedAddress-ssq {
  font-size: 24rpx;
  color: #666666;
  font-size: 24rpx;
  color: #333333;
}
.choosedAddress-detail {
  font-size: 28rpx;
  color: #333333;
  font-weight: 700;
  margin-top: 10rpx;
}
.choosedAddress-nameAndPhone {
  font-size: 32rpx;
  color: #333333;
  font-weight: 700;
  margin-top: 10rpx;
}

.pickMethod {
  width: 690rpx;
  height: 76rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 0 24rpx;
  line-height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pickMethod-pla {
  font-size: 28rpx;
  color: #999999;
}
.pickMethod-text {
  font-size: 28rpx;
  color: black;
  font-weight: 700;
}
.pickMethod-arrow {
  width: 24rpx;
  height: 24rpx;
}

.notes-wrapper {
  background-color: white;
  margin: 0 auto;
  width: 690rpx;
  border-radius: 16rpx;
}
.van-cell {
  border-radius: 16rpx;
  padding-left: 24rpx !important;
  padding-right: 24rpx !important;
  box-sizing: border-box;
}
.notes-input {
  font-size: 28rpx;
}
.van-field__control {
  font-size: 28rpx;
}
.van-field__placeholder {
  font-size: 28rpx;
  color: #999999 !important;
}

.detail {
  margin: 0 auto;
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.detail-line {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detail-line-label {
  font-size: 28rpx;
  color: #333333;
}
.detail-line-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 700;
}
.detail-line-label2 {
  font-size: 32rpx;
  color: #333333;
  font-weight: 700;
}
.detail-line-value2 {
  font-size: 32rpx;
  color: red;
  font-weight: 700;
}

.bottom {
  width: 100vw;
  position: fixed;
  bottom: 0;
  background-color: white;
  height: 160rpx;
  padding: 24rpx 24rpx 0 24rpx;
  box-sizing: border-box;
}
.bottom-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.payNum {
  display: flex;
}
.payNum-label {
  font-size: 32rpx;
  color: #333333;
}
.payNum-value {
  font-size: 32rpx;
  color: #F62603;
  font-weight: 700;
}
.payBtn {
  width: 240rpx;
  height: 84rpx;
  background: #1989FA;
  border-radius: 42rpx;
  color: white;
  text-align: center;
  line-height: 84rpx;
  font-size: 36rpx;
}