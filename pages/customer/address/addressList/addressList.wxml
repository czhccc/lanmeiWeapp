<!--pages/customer/address/addressList/addressList.wxml-->
<view class="addressList">
  <view class="item" wx:for="{{list}}" wx:key="index" bind:tap="chooseItem">
    <view class="content">
      <view class="content-line1">
        <view class="name">{{item.name}}</view>
        <view class="phone">{{item.phone}}</view>
      </view>
      <view class="address">{{item.region}} {{item.detail}}</view>
    </view>
    <view class="edit" catch:tap="toEdit" data-item="{{item}}">编辑</view>
    <view class="default" wx:if="{{item.isDefault}}">默认</view>
  </view>

  <view class="bottom-bar">
    <view class="addBtn" bind:tap="toAdd">新增</view>
  </view>
</view>