/* pages/home/home.wxss */
page {
	height: 100%;
}
.home {
	padding-bottom: 240rpx;
}

.notification {
	background-color: rgb(255,251,232);
	padding: 16rpx 32rpx;
	color: #ed6a0c;
}
.notification-content {
	display: flex;
	align-items: center;
	justify-content: space-between;
	
}
.notification-content-icon {
	font-size: inherit;
	font-size: 36rpx;
	margin-right: 20rpx;
}
.notification-content-value {
	flex: 1;
	font-size: 28rpx;
	line-height: 48rpx;
	text-align: left;
}
.notification-time {
	text-align: right;
	font-size: 26rpx;
	margin-top: 6rpx;
}

.swiper-wrapper {
	width: 686rpx;
	height: 400rpx;
	margin: 0 auto;
	margin-top: 30rpx;
}
.swiper {
	width: 100%;
	height: 100%;
}
.swiper-img {
	width: 100%;
	height: 100%;
	border-radius: 16rpx;
	background-color: rgba(124,124,124,0.05);
}

.nav-items {
	margin-top: 60rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.nav-item {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.nav-item-img {
	width: 100rpx;
	height: 100rpx;
}
.nav-item-title {
	margin-top: 16rpx;
	font-size: 30rpx;
	font-weight: 700;
}

.service {
	width: 686rpx;
	height: 120rpx;
	position: relative;
	margin: 48rpx auto;
}
.service-backImg {
	position: absolute;
	width: 686rpx;
	height: 120rpx;
}
.service-arrow {
	position: absolute;
	width: 46rpx;
	height: 46rpx;
	right: 48rpx;
	top: 37rpx;
}
.service-left {
	margin-left: 32rpx;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	display: flex;
	align-items: center;
}
.service-left-text1 {
	font-size: 28rpx;
}
.service-left-text2 {
	margin-left: 16rpx;
	font-weight: 700;
}
