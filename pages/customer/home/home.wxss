/* pages/home/home.wxss */
page {
	height: 100%;
}
.home {
	padding-bottom: 240rpx;
}

.notification {
	background-color: rgb(255,251,232);
	padding: 16rpx 32rpx;
	color: #ed6a0c;
}
.notification-content {
	display: flex;
	align-items: center;
	justify-content: space-between;
	
}
.notification-content-icon {
	font-size: inherit;
	font-size: 36rpx;
	margin-right: 20rpx;
}
.notification-content-value {
	flex: 1;
	font-size: 28rpx;
	line-height: 48rpx;
	text-align: left;
}
.notification-time {
	text-align: right;
	font-size: 26rpx;
	margin-top: 6rpx;
}

.swiper-wrapper {
	width: 690rpx;
	height: 690rpx;
	margin: 0 auto;
  margin-top: 30rpx;
  box-sizing: border-box;
}
.swiper {
	width: 100%;
	height: 100%;
}
.swiper-img {
	width: 100%;
	height: 100%;
	border-radius: 16rpx;
	background-color: rgba(124,124,124,0.05);
}

.nav-items {
	margin-top: 60rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.nav-item {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.nav-item-img {
	width: 80rpx;
	height: 80rpx;
}
.nav-item-title {
	margin-top: 16rpx;
	font-size: 30rpx;
	font-weight: 700;
}

.news-wrapper {
  width: 630rpx;
  margin: 0 auto;
  margin-top: 60rpx;
}
.news-pla {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: 700;
  padding-left: 16rpx;
  background: linear-gradient(to right, rgba(25, 137, 250, 0.1), rgba(25, 137, 250, 0));
  box-sizing: border-box;
  border-radius: 10rpx;
  position: relative;
  left: -16rpx;
}
.news-content {
  margin-top: 16rpx;
}
.news-item {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}
.news-item-pin {
  position: absolute;
  top: -6rpx;
  color: red;
}
.news-item-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FAA90E;
  border-radius: 50%;
  position: absolute;
  top: 12rpx;
  left: 4rpx;
}
.news-item-title-wrapper {
  display: flex;
  align-items: center;
}
.news-item-title {
  padding-left: 30rpx;
  font-size: 28rpx;
}
.news-item-title-tip {
  background-color: #FF455B;
  padding: 2rpx 4rpx;
  text-align: center;
  vertical-align: middle;
  color: #fff;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
}
.news-blank {
  text-align: center;
  padding-top: 60rpx;
  color: rgb(177, 177, 177);
}