/* pages/home/home.wxss */
page {
	height: 100%;
}
.home {
	padding-bottom: 94rpx;
}

.navBar {
	position: absolute;
	top: 0;
}
.van-nav-bar {
	background-color: rgb(5,35,169) !important;
}

.back {
	width: 100%;
	height: 510rpx;
	background: linear-gradient(#0523A9 0%, rgba(5,35,169,0)  100%);
	position: absolute;
	top: -1;
}

.swiper-wrapper {
	width: 686rpx;
	height: 386rpx;
	margin: 0 auto;
	padding-top: 192rpx;
}
.swiper {
	width: 100%;
	height: 386rpx;
}
.swiper-img {
	width: 100%;
	height: 100%;
	border-radius: 16rpx;
}

.nav-items {
	margin-top: 48rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 50rpx;
}
.nav-item {
	
}
.nav-item-img {
	width: 100rpx;
	height: 100rpx;
}
.nav-item-title {
	margin-top: 16rpx;
	font-size: 28rpx;
}

.service {
	width: 686rpx;
	height: 120rpx;
	position: relative;
	margin: 48rpx auto;
}
.service-backImg {
	position: absolute;
	width: 686rpx;
	height: 120rpx;
}
.service-arrow {
	position: absolute;
	width: 46rpx;
	height: 46rpx;
	right: 48rpx;
	top: 37rpx;
}
.service-left {
	margin-left: 32rpx;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	display: flex;
	align-items: center;
}
.service-left-text1 {
	font-size: 28rpx;
}
.service-left-text2 {
	margin-left: 16rpx;
	font-weight: 700;
}

.hxtt {

}
.hxtt-title {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 32rpx;
}
.hxtt-title-left {
	font-family: JiangChengXieHei, JiangChengXieHei;
	font-style: italic;
}
.hxtt-title-right {
	width: 446rpx;
	height: 4rpx;
	background: linear-gradient( 270deg, rgba(5,35,169,0) 0%, #0523A9 100%);
	border-radius: 4rpx;
}
.hxtt-content {
	margin: 0 32rpx;
	margin-top: 32rpx;
	box-sizing: border-box;
	padding: 0 10rpx;
	display: flex;
	align-items: flex-start;
	overflow-x: auto;
	padding-bottom: 20px;
}
.hxtt-item {
	background: #FFFFFF;
	box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0,0,0,0.1);
	border-radius: 24rpx;
	margin-right: 32rpx;
}
.hxtt-item:last-child {
	margin-right: 0;
}
.hxtt-item-img {
	width: 240rpx;
	height: 240rpx;
	border-radius: 24rpx 24rpx 0 0;
}
.hxtt-item-bottom {
	width: 240rpx;
	padding-bottom: 24rpx;
}
.hxtt-item-bottom-text1 {
	margin-top: 12rpx;
	margin-left: 20rpx;
	font-size: 24rpx;
	white-space: nowrap; /* 让文本只显示一行 */
  overflow: hidden; /* 隐藏超出部分 */
  text-overflow: ellipsis; /* 使用省略号代替超出部分 */
}
.hxtt-item-bottom-text2 {
	margin-top: 12rpx;
	margin-left: 20rpx;
	color: rgba(246,38,3,0.9);
}

.ctks {
	margin-top: 50rpx;
}

.blank {
	width: 100%;
	height: 60rpx;
}